                }
              },
              "relative_link": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Relative Link"
                }
              }
            },
            "repeat": {
              "sub_nav_link_label": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Sub Nav Link Label",
                  "placeholder": "Enter Sub Nav Link Label..."
                }
              },
              "sub_nav_link": {
                "type": "Link",
                "config": {
                  "label": "Sub Nav Link",
